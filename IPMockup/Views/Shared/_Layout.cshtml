<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title IP Mockup</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='http://fonts.googleapis.com/css?family=Oswald' rel='stylesheet' type='text/css'>
    <style>
        body {
            font-family: 'Oswald', sans-serif;
        }
        a {
            color: #A94442;
        }
    </style>

    <link href="~/Content/font-awesome-4.3.0/css/font-awesome.min.css" rel="stylesheet"/>

</head>
<body data-ng-app="app">

<script src="~/Scripts/angular.min.js"></script>
<script>var app = angular.module('app', []);</script>


<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="@Url.Action("Index", "Home")"><img src="~/Content/images/logo2.png" width="35%"/></a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
               
                @if (User.Identity.IsAuthenticated)
                {   
                     <li class="btn-danger">@Html.ActionLink("Editor", "Editor", "Home", null, new{@style="color:white"})</li>
                }
               
                @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="container body-content" style="margin-top: 20px;">
    <div class="row">
        @RenderBody()
    </div>

    <hr/>
    <footer class="text-center">
        <p>
            &copy; @DateTime.Now.Year - <a href="http://www.kjvelarde.com" class="text-danger">Internally Positive</a>
        </p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jqueryui")
@RenderSection("scripts", required: false)
</body>
</html>
